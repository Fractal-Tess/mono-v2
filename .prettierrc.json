{
  "plugins": [
    "prettier-plugin-tailwindcss",
    "prettier-plugin-svelte",
    "@ianvs/prettier-plugin-sort-imports"
  ],
  "trailingComma": "none",
  "arrowParens": "avoid",
  "tabWidth": 2,
  "printWidth": 80,
  "singleQuote": true,
  "bracketSpacing": true,
  "bracketSameLine": false,
  "jsxSingleQuote": false,
  "importOrder": [
    "<BUILTIN_MODULES>",
    "<THIRD_PARTY_MODULES>",
    "^@repo/(.*)$",
    "<TYPES>",
    "<TYPES>^$lib/(.*)$",
    "^$/(.*)$",
    "<TYPES>^$/(.*)$",
    "^[\\$]",
    "<TYPES>^[\\$]",
    "^[./]"
  ]
}